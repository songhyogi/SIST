<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>
	 <definition name="main" template="/WEB-INF/views/template/layout.jsp"><!-- layout.jsp에 전부 조합되게끔 -->
	 	<put-attribute name="title" value="Spring Tiles Example"/>
	 	<put-attribute name="header" value="/WEB-INF/views/template/header.jsp"/><!-- layout.jsp에 header.jsp가 include -->
	 	<put-attribute name="menu" value="/WEB-INF/views/template/menu.jsp"/>
	 	<put-attribute name="body" value="/WEB-INF/views/main_view.jsp"/>
	 	<put-attribute name="footer" value="/WEB-INF/views/template/footer.jsp"/>
	 </definition>
	 
	 <definition name="company" extends="main"><!-- main의 설정 상속 -->
	 	<put-attribute name="title" value="회사소개"/>
	 	<put-attribute name="body" value="/WEB-INF/views/company_view.jsp"/>
	 </definition>
	 
	 <definition name="product" extends="main"><!-- main의 설정 상속 -->
	 	<put-attribute name="title" value="제품소개"/>
	 	<put-attribute name="body" value="/WEB-INF/views/product_view.jsp"/>
	 </definition>
</tiles-definitions>